<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurfaceContainer"
    android:padding="16dp">



    <TextView
        android:id="@+id/lower_rival_name"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/circle_background"
        android:gravity="center"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="72sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Y" />

    <TextView
        android:id="@+id/lower_rival_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="?attr/colorOnSurface"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/lower_rival_name"
        app:layout_constraintStart_toStartOf="@id/lower_rival_name"
        app:layout_constraintEnd_toEndOf="@id/lower_rival_name"
        android:layout_marginBottom="4dp" />

    <!-- Middle (Behind Initial) -->

    <!-- Higher Rival (Top Left) -->
    <TextView
        android:id="@+id/user_initial"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:background="@drawable/circle_background"
        android:gravity="center"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <!-- Higher Rival Score (below circle) -->

    <TextView
        android:id="@+id/higher_rival_name"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/circle_background"
        android:gravity="center"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="72sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="A" />

    <TextView
        android:id="@+id/higher_rival_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="?attr/colorOnSurface"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/higher_rival_name"
        app:layout_constraintStart_toStartOf="@id/higher_rival_name"
        app:layout_constraintEnd_toEndOf="@id/higher_rival_name"
        android:layout_marginTop="4dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="277dp"
        android:layout_height="348dp"
        android:layout_marginTop="40dp"
        android:rotation="-11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/footsteps"
        app:tint="#105710" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="292dp"
        android:layout_height="262dp"
        android:layout_marginBottom="84dp"
        android:rotation="-104"
        app:tint="@color/md_red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.586"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/footsteps" />

    <TextView
        android:id="@+id/chaserview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/md_red"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/lower_rival_name"
        app:layout_constraintHorizontal_bias="0.536"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_initial"
        app:layout_constraintVertical_bias="0.842" />

    <TextView
        android:id="@+id/chasedview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textStyle="bold"
        android:textColor="#105710"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/user_initial"
        app:layout_constraintEnd_toStartOf="@+id/higher_rival_name"
        app:layout_constraintHorizontal_bias="0.36"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.129" />

</androidx.constraintlayout.widget.ConstraintLayout>
